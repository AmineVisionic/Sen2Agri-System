<operator>
  <name>org.esa.sen2agri.compositeprocessor</name>
  <operatorClass>org.esa.snap.core.gpf.operators.tooladapter.ToolAdapterOp</operatorClass>
  <alias>CompositeProcessor</alias>
  <label>Composite Processor</label>
  <version>1.0</version>
  <description>Sen2Agri Composite Processor</description>
  <authors>Ramona Manda</authors>
  <copyright>(C)2015 CS ROMANIA</copyright>
  <internal>false</internal>
  <autoWriteSuppressed>false</autoWriteSuppressed>
  <menuLocation>Menu/Tools/External Tools</menuLocation>
  <preprocessTool>false</preprocessTool>
  <writeForProcessing>false</writeForProcessing>
  <mainToolFileLocation>composite_processing.py</mainToolFileLocation>
  <workingDir>$HOME</workingDir>
  <templateFileLocation>CompositeProcessor-template.vm</templateFileLocation>
  <progressPattern>(?:.+): (\d{1,3})% (?:.+)</progressPattern>
  <errorPattern>ERROR: (.+)</errorPattern>
  <stepPattern>(?:.+)otbcli (\w+) (?:.+)</stepPattern>
  <variables>
    <variable>
      <key>HOME</key>
      <value></value>
      <isShared>false</isShared>
    </variable>
  </variables>
  <parameters>
    <parameter>
      <name>targetProductFile</name>
      <dataType>java.io.File</dataType>
      <description>Output file</description>
      <valueSet/>
      <notNull>false</notNull>
      <notEmpty>false</notEmpty>
      <parameterType>RegularParameter</parameterType>
      <toolParameterDescriptors/>
    </parameter>
    <parameter>
      <name>resolution</name>
      <dataType>java.lang.Integer</dataType>
      <defaultValue>20</defaultValue>
      <description>the resolution of the putput product (if this is 0, the original resolution is kept; otherwise, the image will be resampled)</description>
      <valueSet/>
      <notNull>false</notNull>
      <notEmpty>false</notEmpty>
      <parameterType>RegularParameter</parameterType>
      <toolParameterDescriptors/>
    </parameter>
    <parameter>
      <name>halfSynthesis</name>
      <dataType>java.lang.Integer</dataType>
      <defaultValue>50</defaultValue>
      <description>the half synthesis period (in days)</description>
      <valueSet/>
      <notNull>false</notNull>
      <notEmpty>false</notEmpty>
      <parameterType>RegularParameter</parameterType>
      <toolParameterDescriptors/>
    </parameter>
    <parameter>
      <name>bandsMappingFile</name>
      <dataType>java.io.File</dataType>
      <defaultValue>/usr/share/sen2agri/bands_mapping_L8.txt</defaultValue>
      <description>the file that contains the mapping of the bands. The structure of the mapping of the bands. The file should be located in BUILD_PATH/Composite folder</description>
      <valueSet/>
      <notNull>false</notNull>
      <notEmpty>false</notEmpty>
      <parameterType>RegularParameter</parameterType>
      <toolParameterDescriptors/>
    </parameter>
    <parameter>
      <name>inputFiles</name>
      <dataType>[Ljava.io.File;</dataType>
      <description>the list of files representing the metadata files of the products</description>
      <valueSet/>
      <notNull>false</notNull>
      <notEmpty>false</notEmpty>
      <parameterType>RegularParameter</parameterType>
      <toolParameterDescriptors/>
    </parameter>
    <parameter>
      <name>synthesysDate</name>
      <dataType>java.lang.String</dataType>
      <defaultValue>20130226</defaultValue>
      <description>L3A synthesys date (format YYYYMMDD)</description>
      <valueSet/>
      <notNull>false</notNull>
      <notEmpty>false</notEmpty>
      <parameterType>RegularParameter</parameterType>
      <toolParameterDescriptors/>
    </parameter>
    <parameter>
      <name>tileId</name>
      <dataType>java.lang.String</dataType>
      <defaultValue>T0000</defaultValue>
      <description>Tile id</description>
      <valueSet/>
      <notNull>false</notNull>
      <notEmpty>false</notEmpty>
      <parameterType>RegularParameter</parameterType>
      <toolParameterDescriptors/>
    </parameter>
    <parameter>
      <name>siteId</name>
      <dataType>java.lang.Integer</dataType>
      <defaultValue>0</defaultValue>
      <description>The site ID</description>
      <valueSet/>
      <notNull>false</notNull>
      <notEmpty>false</notEmpty>
      <parameterType>RegularParameter</parameterType>
      <toolParameterDescriptors/>
    </parameter>
  </parameters>
  <source>user</source>
  <isSystem>false</isSystem>
  <isHandlingOutputName>true</isHandlingOutputName>
  <sourceProductDescriptors/>
  <targetPropertyDescriptors/>
  <numSourceProducts>0</numSourceProducts>
</operator>
